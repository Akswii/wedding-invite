---
import {Font} from 'astro:assets';

const fontColor= "#c5110e";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Anna og Aksel</title>
    <Font cssVariable='--font-ysabeau-office' preload/>
    <Font cssVariable='--font-inter'/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global define:vars={{fontColor}}>
	html,
	body {
    font-size: 16px;
    font-family: var(--font-ysabeau-office), sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
    background-color: #F9EDD4;
    color: var(--fontColor);
	}

  h1 {
    font-size: 48px;
  }

  a:link,
  a:visited,
  a:hover,
  a:active {
    text-decoration: none; 
    color: var(--fontColor);

    &:hover {
      text-decoration: underline;
    }
  }

  label {
    gap: 0.5rem;

    input[type="radio"] {
      margin-right: 0.5rem; 
    }

    &:not(.radio) {
      display: flex;
      flex-direction: column;
      font-weight: 600;
      font-size: 14px;
    }
  }

  input {
    &[type="text"] {
      border: 1px solid #D9D9D9;
      border-radius: 8px;
      padding: .7rem;
      font-size: 16px;
    }
  }
</style>
